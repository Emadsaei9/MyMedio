@model IdentitySample.Models.LoginViewModel

@{
    ViewBag.Title = "ورود";

}

<h2>ورود به حساب کاربری</h2>

<div class="login-container">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "login-form" }))
    {
        @Html.AntiForgeryToken()

        <div class="login100-form validate-form">
            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "ایمیل" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>

        <div class="login100-form validate-form">
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "رمز عبور" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>

        <div class="form-group form-check">
            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
            @Html.LabelFor(m => m.RememberMe, new { @class = "form-check-label" })
        </div>

        <button type="submit" class="btn btn-success">ورود</button>

        <div class="links">
            <p><a href="@Url.Action("Register", "Account")">ثبت نام</a></p>
            <p><a href="@Url.Action("ForgotPassword", "Account")">فراموشی رمز عبور</a></p>
        </div>
    }

    @*<div class="external-login">
            <h3>ورود با حساب اجتماعی</h3>
            @Html.Partial("_ExternalLoginsPartial")
        </div>*@
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
