    <link href="~/Content/bootstrap-rtl.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.rtl.css" rel="stylesheet" />

    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/DLogin/css/style.css" />


